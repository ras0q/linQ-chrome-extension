{
  "name": "better linQ(ä»®)",
  "version": "1.2.0",
  "manifest_version": 3,
  "description": "This is a Chrome-Extension that makes linQ more useful.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "chrome_settings_overrides": {
    "homepage": "https://linq.trap.games"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "save"
    },
    "saveWithTags": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "save with tags"
    }
  },
  "permissions": ["management", "tabs", "contextMenus", "notifications"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
